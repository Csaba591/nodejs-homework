<%- include('header') -%>
  <div class="container form-container">
    <h1 class="title has-text-light has-text-centered">
      <% if (typeof locals.tehenesz !== 'undefined') { %>
        <%= locals.tehenesz.nev %> adatainak módosítása
      <% } else { %>
        Új tehenész felvétele
      <% } %> 
    </h1>
    <form method="POST">
      <div class="field">
        <label class="label has-text-light is-large" for="input-name">Név</label>
        <div class="control">
          <input class="input" name="nev" id="input-name" type="text" required value="<%= typeof locals.tehenesz === 'undefined' ? '' : locals.tehenesz.nev %>">
        </div>
        <label class="label has-text-light is-large" for="input-name">Telefonszám</label>
        <div class="control">
          <input class="input" name="tel" id="input-name" type="text" required value="<%= typeof locals.tehenesz === 'undefined' ? '' : locals.tehenesz.tel %>">
        </div>
      </div>
      <input type="submit" class="button is-medium is-fullwidth" href="/tehenesz" value="Mentés">
    </form>
  </div>
<%- include('footer') -%>