<%- include('header') -%>
  <div id="tehenesz-list" class="container elements-container">
    <div class="has-text-centered table-container">
      <h1 class="title has-text-light">Tehenészek</h1>
      <table class="table is-hoverable is-bordered is-fullwidth is-size-5">
        <thead>
          <tr>
            <th>Név</th>
            <th>Telefonszám</th>
          </tr>
        </thead>
        <tbody>
          <% for(tehenesz of teheneszek) { %>
            <tr>
              <td><%= tehenesz.nev %></td>
              <td><%= tehenesz.tel %>
                <div class="buttons has-addons is-pulled-right">
                  <a class="button is-success" href="/tehen/<%= tehenesz._id %>">Tehenek</a>
                  <a class="button is-info" href="/tehenesz/edit/<%= tehenesz._id %>"><i class="far fa-edit"></i></a>
                  <a class="button is-danger" href="/tehenesz/del/<%= tehenesz._id %>"><i class="fas fa-trash-alt"></i></a>
                </div>
              </td>
            </tr>    
          <% } %>
        </tbody>
      </table>
    </div>
    <a href="/tehenesz/new" class="button is-fullwidth">Új hozzáadása</a>
  </div>
<%- include('footer') -%>